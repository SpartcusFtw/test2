loop_duration = 5  # Duration for the loop in seconds

# Start time
start_time = time.time()

# Loop to press and release the A button
while time.time() - start_time < loop_duration:
    # Press the A button
    gamepad.press_button(button=vg.XUSB_BUTTON.XUSB_GAMEPAD_A)
    gamepad.update()  # Update the gamepad to reflect the change
    print("A button pressed")

    # Hold the button for a short duration
    time.sleep(0.5)

    # Release the A button
    gamepad.release_button(button=vg.XUSB_BUTTON.XUSB_GAMEPAD_A)
    gamepad.update()  # Update the gamepad to reflect the change
    print("A button released")

    # Wait for a short duration before pressing again
    time.sleep(0.5)

